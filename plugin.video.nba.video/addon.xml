<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.nba.video"
       name="NBA Video"
       version="1.0.3"
       provider-name="stacked">
  <requires>
	<import addon="xbmc.python" version="2.0"/>
	<import addon="script.module.buggalo" version="1.1.2"/>
	<import addon="script.module.simplejson" version="2.0.10"/>
	<import addon="script.module.parsedom" version="1.3.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">NBA Videos and Highlights</summary>
    <description lang="en">Watch the latest basketball news and highlights from NBA.com</description>
    <platform>all</platform>
	<language>en</language>
  </extension>
</addon>
