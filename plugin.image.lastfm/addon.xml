<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.image.lastfm"
       name="Last.FM Images"
       version="0.0.2"
       provider-name="divingmule">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.beautifulsoup" version="3.0.8"/>
    <import addon="script.module.simplejson"/>
   </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>image</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Images From Last.FM</summary>
    <description>This add-on lets you view and download images from Last.FM of your XBMC and Last.FM artist library. There is also search and if your playing music the currently playing artist directory is listed.</description>
	<platform>all</platform>
  </extension>
</addon>