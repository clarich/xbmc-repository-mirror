<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.filmarkivet"
       name="Filmarkivet"
       version="1.0"
       provider-name="Anders Karlsson (pugo@pugo.org)">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.module.beautifulsoup"/>
    <import addon="script.module.parsedom" version="0.9.2"/>
    <import addon="script.module.requests" version="0.13.2"/>
    <import addon="script.module.xbmcswift" version="0.2.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language>se</language>
    <summary lang="en">Watch movies from the Swedish Film Institute film archive</summary>
    <summary lang="se">Se filmer från Svenska Filminstitutets Filmarkivet</summary>
    <description lang="en">Filmarkivet is an archive of historical Swedish films, provided by the Swedish Film Institute.</description>
    <description lang="se">Filmarkivet är ett arkiv med historiska svenska filmer, publicerade av Svenska Filminstitutet.</description>
  </extension>
</addon>
