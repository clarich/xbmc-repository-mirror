<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.tested"
       name="Tested"
       version="2.0"
       provider-name="Whiskey Media">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.module.simplejson" version="2.0.10"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Tested video plugin</summary>
    <description>Tested is a tech site by dudes who love tech. Watch videos about the newest gadgets, gizmos, and coffee-related products.</description>
  </extension>
</addon>
