<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<addon id="plugin.video.putio"
    name="put.io"
    version="1.1.2"
    provider-name="Alper Kanat (alper@put.io)">
    <requires>
        <import addon="xbmc.python" version="1.0" />
        <import addon="script.module.simplejson" version="2.0.10" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">put.io</summary>
        <description lang="en">A storage service that fetches media files (from various sources) and lets you stream them immediately. You need to have an api key and secret in order to use this addon.</description>
    </extension>
</addon>
